<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarPersonaActivity">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="731dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/RegistrarPersona"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Registrar persona"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_persona"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="DPI"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_dpi"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:hint="Ingresar DPI sin espacios o guiones"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_nombre"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:hint="Ingrese el nombre"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txt_apellido"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Apellido"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_apellido"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:hint="Ingrese el apellido"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txt_altura"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Altura"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_altura"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:hint="Ingrese la altura"
            android:inputType="number"
            android:padding="10dp" />



        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Guardar" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>